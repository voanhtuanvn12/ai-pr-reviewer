{
  "name": "ai-pr-reviewer-action",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered PR reviewer GitHub Action",
  "author": "tuan-vo",
  "license": "ISC",
  "homepage": "https://github.com/tuan-vo/my-pr-reviewer",
  "keywords": [
    "github-action",
    "ai",
    "code-review",
    "pr-reviewer"
  ],
  "scripts": {
    "build": "tsup",
    "build:action": "tsup",
    "test": "vitest run --reporter=verbose --passWithNoTests",
