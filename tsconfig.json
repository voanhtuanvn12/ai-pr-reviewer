{
  "compilerOptions": {
    // "incremental": true,
    "moduleResolution": "node",
    // "module": "ESNext",
    // "target": "ES2020",
    "target": "ES2020",
    "module": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx", // or "react" for React 17 and earlier
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "preserveSymlinks": true
  },
  "include": [
    "src/**/*"
  ],
  // "compileOnSave": false
}

